<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
  <style type="text/css">
  .video-js {padding-top: 56.25%}
  .vjs-fullscreen {padding-top: 0px}
  .vjs-default-skin { color: #009bf5; }
  .vjs-default-skin .vjs-play-progress,
  .vjs-default-skin .vjs-volume-level { background-color: #ffffff }
  .vjs-default-skin .vjs-control-bar,
  .vjs-default-skin .vjs-big-play-button { background: rgba(90,90,90,0.7) }
  .vjs-default-skin .vjs-slider { background: rgba(90,90,90,0.2333333333333333) }
</style>
</head>
<body>

<div id="wrap">
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'Flixter', root_path, :class => 'navbar-brand' %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li>
	        	<%= link_to 'See All Courses', courses_path %>
	        </li>
	      </ul>
	      
	      <ul class="nav navbar-nav navbar-right">
	      	<% if user_signed_in? %>
	          <li><%= link_to 'Log Out', destroy_user_session_path, :method => :delete %></li>
	        <% else %>
	          <li><%= link_to 'Sign In', new_user_session_path %></li>
	          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
	        <% end %>
	      </ul>

	      <ul class="nav navbar-nav navbar-right">
	      	<% if user_signed_in? %>
	          <li><%= link_to 'My Dashboard', '#' %></li>
	        <% end %>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>

	<% if notice.present? %>
	  <p class="alert alert-info"><%= notice %></p>
	<% end %>
	<% if alert.present? %>
	  <p class="alert alert-danger"><%= alert %></p>
	<% end %>

	<%= yield %>
</div>

<br class="clr" />

<div id="footer">
	<div class="container">
		<b>Teachers</b>
		<br />
		<%= link_to 'Teach a Course', new_instructor_course_path %>
	</div>
</div>

</body>
</html>

